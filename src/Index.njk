---
title: Sports Monologue
layout: layout.njk
description: "경기 그 이상을 보기 위해, 경영의 언어로 스포츠를 말하다."
isHome: true
---

{% block styles %}
<style>
/* 홈 글 목록 */
.post-list {
  display: flex;
  flex-direction: column;
  gap: 16px;
  margin-top: 20px;
}

.post-item {
  border-bottom: 1px solid #ddd;
  padding-bottom: 12px;
}

.post-item h4 {
  margin: 0 0 6px;
  font-size: 1.2rem;
}

.post-item p {
  margin: 0;
  font-size: 0.9rem;
  color: #555;
}

.no-posts {
  text-align: center;
  color: #888;
  font-style: italic;
}
</style>
{% endblock %}

{% block content %}
<p class="typing-slogan"><span id="typing-text" aria-live="polite"></span></p>

<main class="home-layout" role="main">
  <!-- ✅ 글 목록 -->
  <section class="post-list">
    {% set postsArray = collections.posts or [] %}
    {% if postsArray | length > 0 %}
      {% for post in postsArray | reverse %}
        <article class="post-item">
          <h4>
            <a href="{{ post.url }}" title="{{ post.data.title }}">
              {{ post.data.title }}
            </a>
          </h4>
          <p>
            <strong>[{{ post.data.category }}]</strong> · 
            <time datetime="{{ post.date | date('yyyy-MM-dd') }}">{{ post.date | date }}</time>
          </p>
          <p>{{ post.data.excerpt or "" }}</p>
        </article>
      {% endfor %}
    {% else %}
      <p class="no-posts">게시된 글이 없습니다.</p>
    {% endif %}
  </section>
</main>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const phrases = [
      "경기 그 이상을 보기 위해",
      "경영의 언어로 스포츠를 말하다"
    ];
    const speed = 60, pause = 1500, eraseSpeed = 40;
    let i = 0, j = 0, isDeleting = false;
    const el = document.getElementById("typing-text");

    function type() {
      const current = phrases[i];
      if (isDeleting) {
        el.textContent = current.substring(0, j--);
        if (j < 0) {
          isDeleting = false;
          i = (i + 1) % phrases.length;
          setTimeout(type, 500);
        } else setTimeout(type, eraseSpeed);
      } else {
        el.textContent = current.substring(0, j++);
        if (j > current.length) {
          isDeleting = true;
          setTimeout(type, pause);
        } else setTimeout(type, speed);
      }
    }
    type();
  });
</script>
{% endblock %}