---
title: Sports Monologue
layout: layout.njk
description: "경기 그 이상을 보기 위해, 경영의 언어로 스포츠를 말하다."
isHome: true 
---

{% block content %}
<p class="typing-slogan"><span id="typing-text" aria-live="polite"></span></p>

<main class="main-container with-sidebar">
  <!-- 왼쪽 팀 보드 -->
  <aside class="sidebar">
    <h2>전체 구단</h2>
    <div class="teams-board">
      {% for row in teams %}
        <div class="team-row">
          {% for team in row %}
            <div class="team-card">
              <a href="/teams/{{ team.code }}">
                <img src="/images/logos/{{ team.code }}.png" alt="{{ team.name }}">
              </a>
            </div>
          {% endfor %}
        </div>
      {% endfor %}
    </div>
  </aside>

  <!-- 오른쪽 글 목록 -->
  <section class="content-area">
    <section class="post-list">
      {% for post in collections.posts | reverse %}
        <article class="post-item">
          <h4>
            <a href="{{ post.url }}" title="{{ post.data.title }}">
              {{ post.data.title }}
            </a>
          </h4>
          <p>
            <strong>[{{ post.data.category }}]</strong> · 
            <time datetime="{{ post.date | date('yyyy-MM-dd') }}">{{ post.date | date }}</time>
          </p>
          <p>{{ post.data.excerpt }}</p>
        </article>
      {% endfor %}
    </section>
  </section>
</main>

<script>
  const phrases = [
    "경기 그 이상을 보기 위해",
    "경영의 언어로 스포츠를 말하다"
  ];
  const speed = 60;
  const pause = 1500;
  const eraseSpeed = 40;
  let i = 0, j = 0;
  let isDeleting = false;
  const el = document.getElementById("typing-text");

  function type() {
    const current = phrases[i];
    if (isDeleting) {
      el.textContent = current.substring(0, j--);
      if (j < 0) {
        isDeleting = false;
        i = (i + 1) % phrases.length;
        setTimeout(type, 500);
      } else {
        setTimeout(type, eraseSpeed);
      }
    } else {
      el.textContent = current.substring(0, j++);
      if (j > current.length) {
        isDeleting = true;
        setTimeout(type, pause);
      } else {
        setTimeout(type, speed);
      }
    }
  }

  document.addEventListener("DOMContentLoaded", type);
</script>
{% endblock %}