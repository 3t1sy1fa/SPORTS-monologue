{% extends "layout.njk" %}

{% block content %}
<main class="lab-container">
  <h1 class="lab-title">Lab</h1>
  <p class="lab-desc">창작, 실험, 기록을 위한 공간입니다.</p>

  <section class="lab-posts">
    {% for post in collections.lab | reverse %}
      <article class="lab-post">
        <a href="{{ post.url }}">
          <h2 class="lab-post-title">{{ post.data.title }}</h2>
        </a>
        <p class="lab-post-date">{{ post.date | date("yyyy.MM.dd") }}</p>
        {% if post.data.description %}
          <p class="lab-post-desc">{{ post.data.description }}</p>
        {% endif %}
        {% if post.data.category %}
          <span class="lab-post-category">[{{ post.data.category }}]</span>
        {% endif %}
      </article>
    {% endfor %}
  </section>
</main>
{% endblock %}