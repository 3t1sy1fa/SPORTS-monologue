<section class="twins-tar-container">
  <header class="twins-tar-header">
    <p class="subtitle">무적 LG! 끝까지 Twins!</p>
    <h1>TWINS</h1>
  </header>

  <link rel="stylesheet" href="/style/twins-tar.css" />


  <div class="twins-tar-layout">
    <!-- 왼쪽 사이드 -->
    <aside class="twins-sidebar">
      <!-- 이번 달 경기 일정 (캘린더) -->
      <div class="calendar-section">
        <h3>이번 달 경기 일정</h3>
        <table class="calendar-table">
          <thead>
            <tr>
              <th>일</th><th>월</th><th>화</th><th>수</th><th>목</th><th>금</th><th>토</th>
            </tr>
          </thead>
          <tbody>
            {% for week in twinsSchedule | monthCalendar("2025-08") %}
            <tr>
              {% for day in week %}
              <td class="{{ day.result }}">
                {% if day.logo %}
                  <a href="{{ day.link }}">
                    <img src="/images/{{ day.logo }}.png" alt="{{ day.opponent }}" class="team-logo">
                  </a>
                {% else %}
                  {{ day.day }}
                {% endif %}
              </td>
              {% endfor %}
            </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>

      <!-- 트윈스 뉴스 -->
      <div class="news-section">
        <h3>트윈스 뉴스</h3>
        <ul class="news-list">
          {% for news in twinsNews %}
          <li>
            <a href="{{ news.link }}" target="_blank">{{ news.title }}</a>
          </li>
          {% endfor %}
        </ul>
      </div>
    </aside>

    <!-- 오른쪽 선수 보드 -->
    <div class="players-board">
      <h3>트윈스 선수단</h3>
      <div class="players-list">
        {% for player in twinsPlayers %}
        <a href="/players/{{ player.slug }}/" class="player-card">
          <img src="/images/players/{{ player.slug }}.jpg" 
               alt="{{ player.name }}" 
               class="player-photo">
          <div class="player-info">
            <div class="player-name">{{ player.name }}</div>
            <div class="player-position">{{ player.position }}</div>
            <hr class="player-divider">
            <div class="player-note">{{ player.note }}</div>
          </div>
        </a>
        {% endfor %}
      </div>
    </div>
  </div>

  <!-- 아래쪽 경기 기록 테이블 -->
  <div class="stat-section">
    <h2>twinS-TAR</h2>
    
    <table class="stats-table">
      <thead>
        <tr>
          <th scope="col">선수</th>
          <th scope="col">경기</th>
          <th scope="col">기록</th>
          <th scope="col">평점</th>
        </tr>
      </thead>
      <tbody>
        {% for stat in playerStats %}
        <tr>
          <td>{{ stat.player }}</td>
          <td>
            <time datetime="{{ stat.date }}">{{ stat.date | date("MM.dd") }}</time>
            {{ stat.game }}
          </td>
          <td>{{ stat.record }}</td>
          <td>{{ stat.rating }}</td>
        </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
</section>