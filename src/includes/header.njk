<!-- ✅ head -->
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="naver-site-verification" content="2b5866b9f8fde114c370fca27185fb6a7a1ea7d5" />
  <title>Sports Monologue</title>
  <link rel="stylesheet" href="/style/main.css" />
  <link rel="icon" href="/favicon.png" type="image/png">
</head>

<body>
  <!-- ✅ 공통 메뉴 항목 (include로 분리 권장) -->
  {% set menuItems = [
    { "url": "/about", "label": "소개" },
    { "url": "/contact", "label": "문의" },
    { "url": "/players", "label": "선수 분석" },
    { "url": "/games", "label": "경기 분석" },
    { "url": "/teams", "label": "구단 분석" },
    { "url": "/vision", "label": "스포츠 경영" },
    { "url": "/log", "label": "log" },
    { "url": "/twins-tar", "label": "twins-tar" }
  ] %}

  <!-- ✅ 데스크탑 헤더 -->
  <header class="desktop-header">
    <div class="grid-container">
      <div class="left-top">
        <a href="/" class="sports">SPORTS</a>
        <a href="/" class="monologue">Monologue</a>
      </div>
      <div class="right-top">
        <div class="since">Since 2025</div>
        <div class="log">KBO 전력분석실</div>
        <div class="divider-line"></div>
        <nav>
          <ul class="nav-menu">
            {% for item in menuItems %}
              <li>
                <a href="{{ item.url }}" 
                   class="{% if page.url == item.url %}active{% endif %}">
                   {{ item.label }}
                </a>
              </li>
            {% endfor %}
          </ul>
        </nav>
      </div>
    </div>
  </header>

  <!-- ✅ 모바일 헤더 -->
  <header class="mobile-header">
    <div class="mobile-top">
      <a href="/" class="logo">SPORTS / M</a>
      <button id="mobile-menu-btn" class="hamburger" aria-label="모바일 메뉴 열기">
        <span></span><span></span><span></span>
      </button>
    </div>
    <nav id="mobile-menu" class="mobile-menu">
      <ul>
        {% for item in menuItems %}
          <li>
            <a href="{{ item.url }}" 
               class="{% if page.url == item.url %}active{% endif %}">
               {{ item.label }}
            </a>
          </li>
        {% endfor %}
      </ul>
    </nav>
  </header>

  <script>
    document.addEventListener("DOMContentLoaded", () => {
      const btn = document.getElementById("mobile-menu-btn");
      const menu = document.getElementById("mobile-menu");
      btn.addEventListener("click", () => menu.classList.toggle("active"));
    });
  </script>
</body>