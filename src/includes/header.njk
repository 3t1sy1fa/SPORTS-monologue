<!-- ✅ head 영역 -->
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="naver-site-verification" content="2b5866b9f8fde114c370fca27185fb6a7a1ea7d5" />
  <title>Sports Monologue</title>
  <link rel="stylesheet" href="/style/main.css" />
  <link rel="icon" href="/favicon.png" type="image/png">
  <link rel="shortcut icon" href="/favicon.png" type="image/png">
</head>

<body>
  <!-- ✅ 데스크탑 전용 헤더 -->
  <header class="desktop-header">
    <div class="grid-container">
      <div class="left-top">
        <a href="/" class="sports">SPORTS</a>
        <a href="/" class="monologue">Monologue</a>
      </div>
      <div class="right-top">
        <div class="since">Since 2025</div>
        <div class="log">KBO 전력분석실</div>
        <div class="divider-line"></div>
        <nav>
          <ul class="nav-menu">
            <li><a href="/about">소개</a></li>
            <li><a href="/contact">문의</a></li>
            <li><a href="/players">선수 분석</a></li>
            <li><a href="/games">경기 분석</a></li>
            <li><a href="/teams">구단 분석</a></li>
            <li><a href="/vision">스포츠 경영</a></li>
            <li><a href="/log">log</a></li>
            <li><a href="/twins-tar">twins-tar</a></li>
          </ul>
        </nav>
      </div>
    </div>
  </header>

  <!-- ✅ 모바일 전용 헤더 -->
  <header class="mobile-header">
    <div class="mobile-top">
      <a href="/" class="logo">SPORTS / M</a>
      <button id="mobile-menu-btn" class="hamburger">
        <span></span><span></span><span></span>
      </button>
    </div>
    <nav id="mobile-menu" class="mobile-menu">
      <ul>
        <li><a href="/about">소개</a></li>
        <li><a href="/contact">문의</a></li>
        <li><a href="/players">선수 분석</a></li>
        <li><a href="/games">경기 분석</a></li>
        <li><a href="/teams">구단 분석</a></li>
        <li><a href="/vision">스포츠 경영</a></li>
        <li><a href="/log">log</a></li>
        <li><a href="/twins-tar">twins-tar</a></li>
      </ul>
    </nav>
  </header>

  <script>
    document.addEventListener("DOMContentLoaded", () => {
      const btn = document.getElementById("mobile-menu-btn");
      const menu = document.getElementById("mobile-menu");
      btn.addEventListener("click", () => menu.classList.toggle("active"));
    });
  </script>
</body>