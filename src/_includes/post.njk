{% extends "layout.njk" %}

{% block content %}
<article class="post-page">
  <h1 class="post-title">{{ title }}</h1>

  <div class="post-meta">
    <span class="post-category">[{{ category }}]</span>
    &nbsp;|&nbsp;
    <span class="post-date">{{ date | date }}</span>
  </div>

  <div class="post-body">
    {{ content | safe }}
  </div>
</article>
{% endblock %}