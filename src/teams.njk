---
layout: layout.njk
title: 구단 분석
---

{% block styles %}
  <link rel="stylesheet" href="/style/team-base.css" />
  <link rel="stylesheet" href="/style/teams.css" />
  
  {% set teamMap = {
    "LG 트윈스": "lg",
    "두산 베어스": "doosan",
    "SSG 랜더스": "ssg",
    "롯데 자이언츠": "lotte",
    "삼성 라이온즈": "samsung",
    "한화 이글스": "hanwha",
    "KIA 타이거즈": "kia",
    "키움 히어로즈": "kiwoom",
    "NC 다이노스": "nc",
    "KT 위즈": "kt"
  } %}

  {% if teamMap[title] %}
    <link rel="stylesheet" href="/style/team-{{ teamMap[title] }}.css" />
  {% endif %}
{% endblock %}

{% block content %}
  <h1 class="page-title">구단 분석</h1>

  <div class="team-grid">
    {% for row in teams %}
      <div class="team-row">
        {% for team in row %}
          <a href="/teams/{{ team.code }}" class="team-box {{ team.code }}" title="{{ team.name }} 구단 분석">
            {{ team.name }}
          </a>
        {% endfor %}
      </div>
    {% endfor %}
  </div>
{% endblock %}