---
layout: layout.njk
title: 구단 분석
---

{% block styles %}
  <link rel="stylesheet" href="/style/team-base.css" />
{% endblock %}

{% block content %}
  <h1 class="page-title">구단 분석</h1>

  <div class="team-grid">
    {% for team in teams %}
      {% if loop.index0 % 4 == 0 %}
        <div class="team-row">
      {% endif %}

      <a href="/teams/{{ team.code }}" class="team-box {{ team.code }}" title="{{ team.name }} 구단 분석">
        {{ team.name }}
      </a>

      {% if loop.index0 % 4 == 3 or loop.last %}
        </div>
      {% endif %}
    {% endfor %}
  </div>
{% endblock %}